  gem 'sqlite3', '1.3.5'
  gem 'rspec-rails', '2.13.0'
  gem 'guard-rspec', '0.5.5'
  gem 'spork', '>= 0.8.4'
  gem 'capybara'
  gem 'webrat'
end

group :production do
  gem 'pg', '0.12.2'
end

# Gems used only for assets and not required
# in production environments by default.
